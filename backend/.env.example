# ==================== DATABASE ====================
DATABASE_URL=postgresql://postgres:password@localhost:5432/arogya_swarm
REDIS_URL=redis://localhost:6379/0

# ==================== LLM & AI ====================
# Google Gemini API (FREE tier: 60 requests/min)
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_gemini_api_key_here
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# ==================== TRANSLATION (PHASE 1) ====================
# MyMemory Translation API (FREE: 5000 requests/day, no signup required)
# No API key needed - uses free public API
# Alternative: LibreTranslate (FREE, self-hosted or https://libretranslate.com)
TRANSLATION_API_PROVIDER=mymemory
# Optional: Your email for higher rate limits (10000 requests/day)
TRANSLATION_API_EMAIL=your_email@example.com

# ==================== EXTERNAL APIs ====================
# Google Maps Air Quality API (Backend-only, not exposed to frontend)
# Get from: https://console.cloud.google.com/google/maps-apis/credentials
# Enable "Air Quality API" in your project
AIR_QUALITY_API_KEY=your_google_maps_api_key

# SAFAR Air Quality (Optional - for India-specific AQI)
SAFAR_AIR_API_KEY=your_safar_key

# ==================== MESSAGING (PHASE 1) ====================
# Twilio (Optional - for real SMS, currently using MOCK service)
# Get from: https://www.twilio.com/console
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=+14155238886

# Enable real messaging (set to false for mock/demo mode)
ENABLE_REAL_SMS=false
ENABLE_REAL_WHATSAPP=false

# ==================== PAYMENT (PHASE 3) ====================
# Razorpay (FREE test mode, no limits)
# Get from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# ==================== HOSPITAL CONFIGURATION ====================
HOSPITAL_NAME=Apollo Metro Hospital
HOSPITAL_CITY=Mumbai
HOSPITAL_BEDS=400

# ==================== FEATURE FLAGS ====================
DEMO_MODE=true
ENABLE_VOICE_NARRATION=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_TWITTER_MOCK=true
ENABLE_RAG_CHATBOT=true

# ==================== APP SETTINGS ====================
FRONTEND_URL=http://localhost:5173
LOG_LEVEL=INFO
DEBUG=false

# ==================== IMAGE DIAGNOSIS (PHASE 2) ====================
# Google Cloud Vision API (FREE tier: 1000 requests/month)
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Hugging Face (FREE inference API)
# Get from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your_huggingface_token

# ==================== VIDEO CONFERENCING (PHASE 3) ====================
# Jitsi Meet (FREE, open source - no API key needed)
JITSI_DOMAIN=meet.jit.si

# Daily.co (FREE tier: 10 rooms, unlimited participants)
# Get from: https://dashboard.daily.co/developers
DAILY_API_KEY=your_daily_api_key
